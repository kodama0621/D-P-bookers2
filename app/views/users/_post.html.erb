<div class="col-md-3">
  <h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: "jpg", fallback: "no_image.jpg" %>
  <table class="table">
    <tbody>
      <tr>
        <td>name</td>
        <td><%= user.name %></td>
      </tr>
       <tr>
        <td>option</td>
        <td><%= user.introduction %></td>
      </tr>
    </tbody>
  </table>

  <div class="row">
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" do %>
    <% end %>
  </div>

  <h2 class="mt-3">New book</h2>
  <%= form_with model: book, url: books_path, local:true do |f| %>
    <div form-group>
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div form-group>
      <%= f.label :option %>
      <%= f.text_area :body, class: "form-control" %>
    </div>
    <div form-group>
      <%= f.submit "Create Book", class: "btn btn-success mt-3" %>
    </div>
  <% end %>

</div>